 ANSWERS FOR ASSIGNMENT  1    (SQL)                                       name :jyothsna y


1 .  SELECT COUNT(*) AS Total_Employees FROM EMP;
2 .  SELECT COUNT(*) AS Total_Departments FROM DEPT;
3 .  SELECT * FROM EMP;
4 .  SELECT * FROM DEPT;
5 .  SELECT SUM(SAL) AS Total_Salary FROM EMP;
6 .  SELECT SUM(COMM) AS Total_Commission FROM EMP;
7 .  SELECT DISTINCT JOB FROM EMP WHERE COMM IS NOT NULL;
8 .  SELECT SYSDATE AS Current_Date FROM DUAL;
9 .  SELECT AVG(SAL) AS Average_Salary FROM EMP;
10  SELECT DEPTNO, COUNT(*) AS Employee_Count FROM EMP GROUP BY DEPTNO;
11 . SELECT DEPTNO, SUM(SAL) AS Total_Salary FROM EMP GROUP BY DEPTNO;
12 . SELECT JOB, COUNT(*) AS Employee_Count FROM EMP GROUP BY JOB;
13 . SELECT JOB, AVG(SAL) AS Average_Salary FROM EMP GROUP BY JOB;
14 . SELECT ENAME, HIREDATE, EXTRACT(DAY FROM HIREDATE) AS HireDay,
       EXTRACT(MONTH FROM HIREDATE) AS HireMonth,
       EXTRACT(YEAR FROM HIREDATE) AS HireYear
      FROM EMP;
15 . SELECT * FROM EMP ORDER BY DEPTNO;
16 . SELECT * FROM EMP ORDER BY JOB;
17 . SELECT * FROM EMP ORDER BY SAL DESC;
18 . SELECT * FROM EMP ORDER BY DEPTNO ASC, SAL DESC;
19 . SELECT COUNT(*) AS Six_Char_Names FROM EMP WHERE LENGTH(ENAME) = 6;
20 . SELECT MAX(SAL) AS Max_Salary, MIN(SAL) AS Min_Salary FROM EMP;
21 . SELECT DEPTNO, MAX(SAL) AS Max_Salary, MIN(SAL) AS Min_Salary,
       AVG(SAL) AS Avg_Salary, SUM(SAL) AS Total_Salary
       FROM EMP GROUP BY DEPTNO;
22 .  SELECT * FROM EMP ORDER BY HIRE_DATE;
23 .  SELECT * FROM EMP WHERE HIRE_DATE = (SELECT MAX(HIREDATE) FROM EMP);
24 . SELECT * FROM EMP WHERE HIRE_DATE = (SELECT MIN(HIREDATE) FROM EMP);
25 . SELECT ENAME, DEPTNO, HIREDATE, EXTRACT(YEAR FROM HIREDATE) AS HireYear FROM EMP  ORDER BY EXTRACT(YEAR FROM HIREDATE) DESC, DEPTNO ASC;
26.  SELECT * FROM EMP WHERE SAL >= (SELECT AVG(SAL) FROM EMP);
27. SELECT * FROM EMP WHERE SAL <= (SELECT AVG(SAL) FROM EMP);
28. SELECT * FROM EMP WHERE SAL BETWEEN 2000 AND 4000;
29. SELECT * FROM EMP WHERE SAL = (SELECT MAX(SAL) FROM EMP)
       UNION ALL 
      SELECT * FROM EMP WHERE SAL = (SELECT MIN(SAL) FROM EMP);
30. SELECT COUNT(*) AS Gifts_Next_Month  FROM EMP
      WHERE EXTRACT(MONTH FROM HIRE_DATE) = EXTRACT(MONTH FROM ADD_MONTHS(SYSDATE, 1));
